server {
    listen       80;
    server_name  domain;
    location / {
    	root   installdir/public;
     	passenger_enabled on;
    }
    error_page   500 502 503 504  /50x.html;
    location = /50x.html {
        root   html;
    }
  	error_page 413 /413.html;
   	location = /413.html{
       root   html;
       allow all;
    }
 }
